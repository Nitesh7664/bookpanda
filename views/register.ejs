                        }else if(password.trim() == ""){
                            alert(<h2>"password field cannot be empty"</h2>);
                            return false;        
                        }else if(confirmpass.trim() == ""){
                            alert(<h2>"confirm password field cannot be empty"</h2>);
                            return false;        
                        }else if(confirmpass.trim() != password.trim()){
